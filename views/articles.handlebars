<div class="container" style="margin-top: 100px">

    <div class="col-md-12 jumbotron">
        <div class="text-center">
            <h1> Articles</h1>
        </div>
    </div>
    <div class="col-md-12">
        {{#if ArticleScrape}}
            {{#each ArticleScrape}}
                <div class="card" style="margin-bottom: 20px;">
                    <div class="card-header">
                        <h4>{{this.title}}</h4>
                    </div>
                    <div class="card-body">
                        <p> {{this.content}}</p>
                        <a href='https://www.nbcnews.com/us-news{{this.link}}' target="_blank">https://www.nbcnews.com/us-news/{{this.link}}</a>
                        <br><br>
                        <button type="button" class="btn btn-success addNote" data-toggle="modal" data-target="#noteModal{{this._id}}" data-id={{this._id}}>Add Comments</button>
                        <button type="button" class="btn btn-success delete" data-id={{this._id}}>Delete</button>
                    </div>
                </div>
            {{/each}}
        {{else}}
        <div class="card">
            <div class="card-body">
                <h4>Your saved articles will display here.</h4>
            </div>
        </div>
        {{/if}}
    </div>
</div>