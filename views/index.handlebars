<div class="container" style="margin-top: 100px">
    <div class="col-md-12 jumbotron">
        <div class="text-center">
            <h1> ABC News Scraper</h1>
        </div>

    </div>
    <div class="col-md-12">
        {{#if article}}
            {{#each article}}
            <div class="card" style="margin-bottom: 20px;">
                <div class="card-header">
                    <h4>{{this.title}}</h4>
                </div>
                <div class="card-body">
                    <p> {{this.content}}</p>
                    <a href="https://abcnews.go.com/{{this.link}}" target="_blank">https://abcnews.go.com/{{this.link}}</a>
                    <br><br>
                    <button type="button" class="btn btn-success save" data-id={{this._id}}>Save</button>
                </div>
            </div>
            {{/each}}
        {{else}}
        <div class="card">
            <div class="card-body">
            <h4>We don't have any new articles now. Click Scrape article button to scrape new articles!</h4>
            </div>
         </div>
        {{/if}}
    </div>
</div>